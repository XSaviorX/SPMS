    <!-- Primary modal -->
    <div id="modalNOSIPosting" class="modal fade" data-keyboard="false">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-blue-800">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h6 class="modal-title">
                        {{nosiEmp.fullNameFirst}}
                    </h6>

                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4">
                                <label class="no-margin-bottom">Effective Date <span class="text-danger">*</span>  </label>
                                <label class="form-control text-center text-semibold">
                                    {{formatDate(nosiEmp.effectiveDate)}}
                                </label>
                            </div>

                        </div>
                    </div>

                    <div class="form-group" >
                        <div class="row">
                            <div class="col-md-4">
                                <label class="no-margin-bottom">Salary Grade/Step From <span class="text-danger">*</span></label>
                                <label class="form-control text-center text-semibold">
                                    {{nosiEmp.salaryGrade}}/{{nosiEmp.stepIncFrom}}
                                </label>
                            </div>

                            <div class="col-md-4">
                                <label class="no-margin-bottom"> Salary From <span class="text-danger">*</span></label>
                                <label class="form-control text-right text-semibold">
                                    {{nosiEmp.salaryFrom | number:2}}
                                </label>
                            </div>

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">

                            <div class="col-md-4">
                                <label class="no-margin-bottom">Salary Grade/Step From <span class="text-danger">*</span></label>
                                <label class="form-control text-center text-semibold">
                                    {{nosiEmp.salaryGrade}}/{{nosiEmp.stepIncTo}}
                                </label>
                            </div>

                            <div class="col-md-4">
                                <label class="no-margin-bottom"> Salary From <span class="text-danger">*</span></label>
                                <label class="form-control text-right text-semibold">
                                    {{nosiEmp.salaryTo | number:2}}
                                </label>
                            </div>

                            <div class="col-md-4">
                                <label class="no-margin-bottom"> Additional <span class="text-danger">*</span></label>
                                <label class="form-control text-right text-semibold">
                                    {{nosiEmp.salaryAdd | number:2}}
                                </label>
                            </div>

                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary bg-blue-800" ng-disabled="bDisable" ng-click="printPreview(nosiEmp.transCode)">
                        <i class="icon-printer2"></i> 
                        Print Preview
                    </button>
                </div>
            </div>
        </div>
    </div>
 
