                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            View
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-right">
                            <li><a href="#" ng-click="openModal_AddMenu()"><i class="icon-grid52"></i> Menu Group</a></li>
                            <li><a href="#" ng-click="openModal_AddMenu()"><i class="icon-list"></i> Menu Sub Group</a></li>
                        </ul>
