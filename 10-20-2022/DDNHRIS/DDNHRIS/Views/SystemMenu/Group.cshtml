                        <ul class="dropdown-menu dropdown-menu-right">
                            <li><a href="#" ng-click="openModal_AddMenu()"><i class="icon-plus22"></i> Menu Group</a></li>
                            <li><a href="#" ng-click="openModal_AddMenu()"><i class="icon-plus22"></i> Menu Sub Group</a></li>
