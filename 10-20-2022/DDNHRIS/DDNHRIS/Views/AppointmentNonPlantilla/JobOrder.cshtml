<style>
    .page-title {
        padding: 20px 36px 10px 0;
        display: block;
        position: relative;
    }
</style>


<!-- Vertical form options -->
<div class="row" ng-controller="AppointmentJobOrder">

    <div class="content">
        <div class="col-md-12">
            <div class="panel panel-flat">


                <!-- Page header -->
                <div class="page-header">
                    <div class="page-header-content">
                        <div class="page-title">
                            <h4><a href="~/AppointmentNonPlantilla/List" class="icon-arrow-left52 position-left"></a> <span class="text-semibold">JOB ORDER</span></h4>
                        </div>
                    </div>

                </div>
                <!-- /page header -->

                <div class="panel-body">

                    <div class="row">

                        <div class="col-md-6">
                            <div class="form-group  text-bold">
                                <label class="no-margin-bottom">Appoinment Name <span class="text-danger">*</span> </label>
                                <input type="text" class="form-control" ng-model="data.appointmentName" placeholder="(Appointment Description)">
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group  text-bold">
                                <label class="no-margin-bottom">Period From </label>
                                <input class="form-control required" type="date" ng-model="data.periodFrom" name="periodFrom">
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group  text-bold">
                                <label class="no-margin-bottom">Period To <span class="text-danger">*</span></label>
                                <input class="form-control required" type="date" ng-model="data.periodTo" name="periodTo">
                            </div>
                        </div>

                    </div>

                    <div class="row">

                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="no-margin-bottom">Source of Fund <span class="text-danger">*</span></label>
                                <div class="input-group text-bold" style="width:100%">
                                    <select class="form-control select2 select-Custom" ng-model="data.fundSourceCode" style="width:100%; "
                                            ng-options="c.fundSourceCode as c.projectName for c in fundSourceList" value="{{c.fundSourceCode}}"
                                            id="fundSource">
                                        <option value="" selected="">-- Select --</option>
                                    </select>
                                </div>
                            </div>
                        </div>


                    </div>



                    <p style="font-size:.3em;">&nbsp;</p>
                    <div class="row">

                        <div class="col-md-12">

                            <!-- Scrollable table -->
                            <div class="panel panel-flat">
                                <div class="panel-heading">
                                    <h5 class="panel-title text-blue-800 text-semibold">LIST OF APPOINTEE</h5>
                                    <div class="heading-elements">

                                        <button class="btn btn-sm btn-default text-blue-800 text-semibold" ng-click="openModalSelectEmp(data)">
                                            <span class=" icon-user-plus "></span> &nbsp; Add Appointee
                                        </button>

                                        @*<button class="btn btn-sm btn-default text-info text-bold" ng-click="openModalSelectEmp()">
                                                <span class="icon-plus-circle2 text-info "></span> &nbsp; Add
                                            </button>*@

                                    </div>
                                </div>

                                <div class="table-responsive pre-scrollable">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>NAME OF APPOINTEE/S</th>
                                                <th>POSITION TITLE</th>
                                                <th>SALARY GRADE</th>
                                                <th>DAILY WAGE</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            <tr ng-repeat="item  in appointeeList">
                                                <td>{{$index + 1}}</td>
                                                <td>{{item.fullNameLast}}</td>
                                                <td>{{item.positionTitle}}</td>
                                                <td class="text-center">{{item.salaryGrade}}</td>
                                                <td class="text-right"><span class="text-bold">P</span>&nbsp;{{item.rateDaily| number:2}}/D</td>
                                                <td class="text-center">
                                                    <button class="btn btn-xs text-danger no-margin-bottom no-margin-top" ng-click="deleteEmployee(item.EIC)">
                                                        <i class="icon-trash-alt"></i>
                                                    </button>
                                                </td>
                                            </tr>

                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </div>


                    </div>

                    <div class="row">
                        <div class="col-sm-12 text-right">
                            <button class="btn btn-primary" ng-disabled="bDisable" ng-click="submitJobOrderAppointment(data)">
                                <span class="icon-check"></span>  Save J.O. Appointment
                            </button>                           
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
        
