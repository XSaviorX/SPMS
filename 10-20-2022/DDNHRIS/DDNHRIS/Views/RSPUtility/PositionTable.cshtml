@{
    ViewBag.Title = "List";
}

<link href="~/Content/assets/plugins/select2/select2.min.css" rel="stylesheet" />
<link href="~/Content/assets/plugins/toastr/toastr.min.css" rel="stylesheet" />
<style>
    .page-title {
        padding: 20px 36px 10px 0;
        display: block;
        position: relative;
    }

    .tbl-sm > tbody > tr > td, .tbl-sm > tbody > tr > th, .tbl-sm > thead > tr > td {
        padding: 5px 20px;
        line-height: 1.5384616;
        vertical-align: top;
    }
</style>

<div ng-controller="PositionTable">
    <!-- Page header -->
    <div class="page-header">
        <div class="page-header-content">
            <div class="page-title">
                <h4><i class="icon-books"></i> <span class="text-semibold">POSITION TABLE</span> </h4>
            </div>
            <div class="heading-elements">

            </div>
        </div>


        <!-- Toolbar -->
        <div class="navbar navbar-default navbar-component navbar-xs">
            <ul class="nav navbar-nav visible-xs-block">
                <li class="full-width text-center"><a data-toggle="collapse" data-target="#navbar-filter"><i class="icon-menu7"></i></a></li>
            </ul>
            <div class="navbar-collapse collapse" id="navbar-filter">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#standard" data-toggle="tab" ng-click="changeCode(1)"><i class="icon-stack-text position-left"></i> CSC Standard Positions</a></li>             
                    <li><a href="#nonStandard" data-toggle="tab" ng-click="changeCode(2)"><i class="icon-file-check position-left"></i> Contract Positions</a></li>
                    <li ><a href="#profile" data-toggle="tab" ng-click="viewPositionProfile()"><i class="icon-file-check position-left"></i> Position Profile</a></li>
                </ul>
                <div class="navbar-right">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="icon-file-plus position-left"></i>
                                Create
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li><a href="#" ng-click="createPosition()"><i class="icon-file-text2"></i> New Position</a></li>
                            </ul>
                        </li>
                        @*<li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-gear"></i> <span class="visible-xs-inline-block position-right"> Options</span> <span class="caret"></span></a>
                                <ul class="dropdown-menu dropdown-menu-right">
                                    <li><a href="#"><i class="icon-clippy"></i> Go to List</a></li>
                                    <li><a href="#"><i class="icon-search4"></i> Find</a></li>
                                </ul>
                            </li>*@
                    </ul>
                </div>
            </div>
        </div>
        <!-- /toolbar -->

    </div>



    <!-- Content area -->
    <div class="content">
        <!-- User profile -->
        <div class="row">

            <div class="col-lg-12">
                <div class="tabbable">
                    <div class="tab-content">

                        <!--  CSC Standard -->
                        <div class="tab-pane fade in active" id="standard">
                            <!-- CSC Standard -->
                            <div class="panel panel-flat">
                                <div class="panel-heading">
                                    <h6 class="panel-title"> CSC STANDARD POSITIONS</h6>
                                </div>
                                <div class="panel-body">
                                    <table class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Position Title</th>
                                                <th style="text-align:right">Salary Month &nbsp;</th>
                                                <th style="text-align:center">CSC Position Level</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tr ng-repeat="item in positionCSC">
                                            <td>
                                                {{$index+1}}
                                            </td>

                                            <td>

                                                <span class="text-blue-800 text-semibold cursor-pointer" ng-click="editCSCPositionData(item)">
                                                    {{item.positionTitle}}
                                                </span>

                                            </td>

                                            <td class="text-right">
                                                {{item.rateMonth}}
                                            </td>
                                            <td class="text-center">
                                                {{item.keyCSCLevel}}
                                            </td>
                                            <td class="text-center text-blue-800 text-bold">
                                                <ul class="icons-list">

                                                    <li class="dropdown">
                                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-arrow-down12"></i> </a>
                                                        <ul class="dropdown-menu dropdown-menu-right">
                                                            <li ng-click="viewAppointmentData(item)"><a href="#"><i class="icon-file-check"></i> Edit </a></li>

                                                            <li class="divider"></li>
                                                            <li><a href="#"><i class="icon-cross2 text-danger"></i> Cancel </a></li>
                                                        </ul>
                                                    </li>
                                                </ul>
                                            </td>

                                        </tr>
                                    </table>
                                </div>
                            </div>

                        </div>

                        <!-- NON STANDARD -->
                        <div class="tab-pane fade in" id="nonStandard">
                            <!-- NON CSC -->
                            <div class="panel panel-flat">
                                <div class="panel-heading">
                                    <h6 class="panel-title"> NON STANDARD POSITIONS</h6>
                                </div>
                                <div class="panel-body">
                                    <table class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Position Descripton</th>
                                                <th>Position Title</th>
                                                <th style="text-align:right">Salary Month &nbsp;</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tr ng-repeat="item in positionCOS">
                                            <td>
                                                {{$index+1}}
                                            </td>

                                            <td>
                                                {{item.positionDesc}}
                                            </td>
                                            <td>
                                                {{item.positionTitle}}
                                            </td>

                                            <td class="text-right">
                                                {{item.salary | number: 2}}
                                            </td>

                                            <td class="text-center text-blue-800 text-bold">
                                                <ul class="icons-list">

                                                    <li class="dropdown">
                                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-arrow-down12"></i> </a>
                                                        <ul class="dropdown-menu dropdown-menu-right">
                                                            <li ng-click="viewAppointmentData(item)"><a href="#"><i class="icon-file-check"></i> Edit </a></li>


                                                            <li class="divider"></li>
                                                            <li><a href="#"><i class="icon-cross2 text-danger"></i> Cancel </a></li>
                                                        </ul>
                                                    </li>
                                                </ul>
                                            </td>

                                        </tr>
                                    </table>
                                </div>
                            </div>

                        </div>
                        
                        
                        <!-- SUB POSITION-->
                        <div class="tab-pane fade" id="profile">
                            <!-- NON CSC -->
                            <div class="panel panel-flat">
                                <div class="panel-heading">
                                    <h6 class="panel-title"> Position Profile</h6>
                                </div>
                                <div class="panel-body">
                                    <table class="table table-striped table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th rowspan="2">#</th>
                                                <th rowspan="2">Position Title </th>
                                                <th colspan="3" class="text-center">Casual</th>           
                                                <th colspan="3" class="text-center">Job Order</th>     
                                                <th colspan="3" class="text-center">Contract of Service</th>                                                
                                                <th colspan="3" class="text-center">Honorarium</th>      
                                                <th rowspan="2">TOTAL</th>  
                                            </tr>
                                            <tr>                                               
                                                <th>M</th>
                                                <th>F</th>
                                                <th>Total</th>
                                                <th>M</th>
                                                <th>F</th>
                                                <th>Total</th>
                                                <th>M</th>
                                                <th>F</th>
                                                <th>Total</th>
                                                <th>M</th>
                                                <th>F</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            <tr ng-repeat="item in positionProfile">
                                                <td>{{$index+1}}</td>
                                                <td>{{item.positionTitle}}</td>
                                                <td class="text-right">{{item.casualM}}</td>
                                                <td class="text-right">{{item.casualF}}</td>
                                                <td class="text-right  text-semibold">{{item.casualTotal}}</td>

                                                <td class="text-right">{{item.joM}}</td>
                                                <td class="text-right">{{item.joF}}</td>
                                                <td class="text-right text-semibold">{{item.joTotal}}</td>

                                                <td class="text-right">{{item.cosM}}</td>
                                                <td class="text-right">{{item.cosF}}</td>
                                                <td class="text-right text-semibold">{{item.cosTotal}}</td>

                                                <td class="text-right">{{item.honM}}</td>
                                                <td class="text-right">{{item.honF}}</td>
                                                <td class="text-right text-semibold">{{item.honTotal}}</td>

                                               

                                                <td class="text-right text-semibold">{{item.total}}</td>
                                              
                                            </tr>
                                        </tbody>

                                    </table>
                                </div>
                            </div>

                        </div>


                        <!-- SUB POSITION-->
                        <div class="tab-pane fade" id="subPosition">
                            <!-- NON CSC -->
                            <div class="panel panel-flat">
                                <div class="panel-heading">
                                    <h6 class="panel-title"> SUB-POSITIONS</h6>
                                </div>
                                <div class="panel-body">
                                    <table class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Publication Date</th>
                                                <th>Items</th>
                                                <th>CSC Posted Date</th>
                                                <th>CSC Posted Closing Date</th>
                                                <th></th>
                                            </tr>
                                        </thead>

                                    </table>
                                </div>
                            </div>

                        </div>


                    </div>
                </div>
            </div>


        </div>

    </div>


    <!-- Modal CSC CONTRACT POSITION -->
    <div class="modal fade" id="modalPositionCSCEdit" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h6 class="form-section" style="margin-top:0px; padding-top:0px;"><i class="icon-clipboard4"></i> Contract Positions </h6>
                </div>
                <div class="modal-body" style="padding-top:7px;">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Position Title <span class="text-danger">*</span></label>
                                <input class="form-control text-semibold" type="text" ng-model="positionData.positionTitle" ng-readonly="true" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Salary Grade<span class="text-danger">*</span></label>
                                <input class="form-control text-semibold" type="number" ng-model="positionData.salaryGrade" ng-readonly="true" />
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <label>Monthly Salary<span class="text-danger">*</span></label>
                                <input class="form-control text-semibold" ng-model="positionData.rateMonth" ng-readonly="true" />
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label>CSC Position Level<span class="text-danger">*</span></label>
                                <select name="cars" id="cars" class="form-control text-semibold" ng-model="keyCSCLevel">
                                    <option value="K">K</option>
                                    <option value="T">T</option>
                                    <option value="S">S</option>
                                    <option value="A">A</option>
                                </select>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary " ng-disabled="bDisable" ng-click="updateCSCPosition(positionData.positionCode, keyCSCLevel)">Submit Position</button>
                </div>
            </div>
        </div>

    </div>



    <!-- Modal CONTRACT POSITION -->
    <div class="modal fade" id="modalPositionContract" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h6 class="form-section" style="margin-top:0px; padding-top:0px;"><i class="icon-clipboard4"></i> Contract Positions </h6>
                </div>
                <div class="modal-body" style="padding-top:7px;">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Position Description <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" ng-model="data.positionDesc" placeholder="Administrative Aide IV (10,000.00)" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Position Title <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" ng-model="data.positionTitle" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Monthly Salary<span class="text-danger">*</span></label>
                                <input class="form-control" type="number" ng-model="data.salary" />
                            </div>
                        </div>
                    </div>


                </div>
                <div class="modal-footer">

                    <button type="button" class="btn btn-secondary " data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary " ng-disabled="bDisable" ng-click="submitPositionContract(data)">Submit Position</button>
                </div>
            </div>
        </div>

    </div>



</div>


<!-- /content area -->
@section JavaScript{
    <script src="~/Content/assets/plugins/toastr/toastr.min.js"></script>
    <script src="~/Content/assets/plugins/select2/select2.min.js"></script>
    <script src="~/Content/assets/plugins/moments/moment.js"></script>
    <script src="~/Scripts/AngularJS/RSPUtility/PositionTable.js"></script>

    <script>
        $("[data-mask]").inputmask();
        $("#eligibility").select2({
            placeholder: '-- Select --',
            allowClear: true
        });
    </script>

}